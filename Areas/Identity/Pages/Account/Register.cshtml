@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Agri-Energy Connect</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f4f4f4;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .register-container {
            background-color: white;
            border-radius: 15px;
            padding: 50px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 450px;
            background-image: url('https://www.transparenttextures.com/patterns/cubes.png');
        }

        h2 {
            text-align: center;
            color: #4CAF50;
            font-weight: 600;
            margin-bottom: 40px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            padding: 15px;
            border: 1px solid #ddd;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                border-color: #4CAF50;
                box-shadow: 0 0 5px rgba(76, 175, 80, 0.3);
            }

        .btn-primary {
            background-color: #4CAF50;
            border-color: #4CAF50;
            border-radius: 25px;
            padding: 12px 30px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: background-color 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .btn-primary:hover {
                background-color: #388e3c;
            }

        .alert-danger {
            display: none;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2 class="text-center"><i class="fas fa-user-plus fa-2x mb-3"></i> Join Agri-Energy Connect</h2>

        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" id="Input_Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" id="Input_Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" id="Input_ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Register</button>
        </form>
        <div class="alert alert-danger" id="errorMessage"></div>
        <div class="text-center mt-3">
            <a href="/Login" class="forgot-password">Already have an account? Login</a>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
        <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth-compat.js"></script>
        <script>
            // Firebase configuration
            var firebaseConfig = {
                apiKey: "AIzaSyA1n6tMUhQjZBXAt0MmISVXMrdEDbLiabY",
                authDomain: "agri-energy-connect-f5b07.firebaseapp.com",
                databaseURL: "https://agri-energy-connect-f5b07-default-rtdb.firebaseio.com",
                projectId: "agri-energy-connect-f5b07",
                storageBucket: "agri-energy-connect-f5b07.appspot.com",
                messagingSenderId: "114678490560",
                appId: "1:114678490560:web:3df67319f3eeffa885d425"
            };

            firebase.initializeApp(firebaseConfig);
            const auth = firebase.auth();

            const registerForm = document.getElementById('registerForm');
            const errorMessage = document.getElementById('errorMessage');

            registerForm.addEventListener('submit', (event) => {
                event.preventDefault(); // Prevent default form submission

                const email = registerForm['Input_Email'].value;
                const password = registerForm['Input_Password'].value;
                const confirmPassword = registerForm['Input_ConfirmPassword'].value;

                if (password !== confirmPassword) {
                    errorMessage.textContent = "Passwords do not match.";
                    errorMessage.style.display = 'block';
                    return;
                }

                auth.createUserWithEmailAndPassword(email, password)
                    .then((userCredential) => {
                        console.log("User registered successfully:", userCredential);
                        // Redirect to the desired page (e.g., home page)
                        window.location.href = '/Home';
                    })
                    .catch((error) => {
                        console.error("Error registering user:", error);
                        errorMessage.textContent = error.message;
                        errorMessage.style.display = 'block';
                    });
            });
        </script>
    }
</body>
</html>
